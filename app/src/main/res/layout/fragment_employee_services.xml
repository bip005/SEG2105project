<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/spServicesTitle"
        android:text="SERVICES OFFERED"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/spServicesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/spServicesTitle"
        android:layout_above="@+id/spServicesButtons"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/spServicesButtons">

        <Button
            android:id="@+id/spServicesAdd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:onClick="onClickAddNewService"
            android:padding="10dp"
            android:text="Add"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/spServicesDelete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:onClick="onClickDelFromSPlist"
            android:padding="10dp"
            android:text="Delete"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>